set -e

archive="tomcat/apache-tomcat-8.0.32.tar.gz"
pkg_name="apache-tomcat-8.0.32"

#UNPRESS ARCHIVE
if [[ -f $archive ]] ; then
  tar xzf $archive
else
  echo "Archive not found"
  exit 1
fi

#COPY ARCHIVE
if [[ -d $pkg_name/bin ]]; then
  cp -a $pkg_name/* ${BOSH_INSTALL_TARGET}
else
  echo "TOMCAT is not properly packaged"
  exit 1
fi
