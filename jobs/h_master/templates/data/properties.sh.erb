export HADOOP_HOME=$PKG_DIR/hadoop
export HADOOP_CONF_DIR=$PKG_DIR/hadoop/etc/hadoop
export PATH=$PATH:$HADOOP_HOME/bin
export PATH=$PATH:$HADOOP_HOME/sbin
