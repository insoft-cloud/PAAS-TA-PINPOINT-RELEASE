#!/usr/bin/env bash

export NAME='<%= name %>'
export JOB_INDEX=<%= index %>
export JOB_FULL="$NAME/$JOB_INDEX"

#SET ENV
export HOME=/var/vcap
export JOB_DIR=$HOME/jobs/$JOB_NAME
